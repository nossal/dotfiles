"*":
  "atom-beautify":
    general:
      analytics: false
      beautifyEntireFileOnSave: false
  core:
    autoHideMenuBar: true
    disabledPackages: [
      "spell-check"
      "metrics"
    ]
    openEmptyEditorOnStart: false
    themes: [
      "one-dark-ui"
      "railscast-theme"
    ]
  editor:
    fontFamily: "Monaco"
    fontSize: 13
    scrollPastEnd: true
    showInvisibles: true
  "file-watcher":
    promptWhenChange: true
  "file-icons":
    forceShow: true
  "highlight-selected":
    hideHighlightOnSelectedWord: true
    lightTheme: true
  linter:
    displayLinterInfo: false
    showErrorPanel: false
  minimap:
    displayPluginsControls: false
    plugins:
      cursorline: true
      cursorlineDecorationsZIndex: 0
      "find-and-replace": true
      "find-and-replaceDecorationsZIndex": 0
      "git-diff": true
      "git-diffDecorationsZIndex": 0
      "highlight-selected": true
      "highlight-selectedDecorationsZIndex": 0
  "one-dark-ui":
    layoutMode: "Compact"
    tabSizing: "Even"
  "tree-view":
    showOnRightSide: true
    autoReveal: true
  "tree-view-autoresize":
    maximumWidth: 500
    minimumWidth: 200
  welcome:
    showOnStartup: false
