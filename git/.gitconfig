[include]
	path = ~/.gitconfig.local

[credential]
	helper = cache

[advice]
	statusHints = false

[color]
	diff = auto
	status = auto
	branch = auto
	ui = true

[grep]
  extendRegexp = true
  lineNumber = true

[log]
	date = local

[push]
	default = simple

[mergetool]
	keepBackup = false

[merge]
	tool = meld

[difftool]
	prompt = false
