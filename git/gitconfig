[include]
    path = ~/.dotfiles/git/gitconfig.local

[alias]
    l = log --pretty=oneline -n 20 --graph --abbrev-commit
    s = status -s
    c = clone --recursive
    dm = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"

[core]
    editor = nvim
    excludesfile = ~/.dotfiles/git/gitignore.global
    fscache = true
    preloadindex = true

[credential]
    helper = cache

[advice]
    statusHints = false

[color]
    diff = auto
    status = auto
    branch = auto
    ui = true

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    header = white normal dim
    added = green
    changed = yellow
    deleted   = red bold
    untracked = red normal

[color "branch"]
    current = green
    local = cyan
    remote = magenta

[push]
    default = simple

[grep]
  extendRegexp = true
  lineNumber = true

[log]
    date = local

[diff]
    renames = copies
    tool = meld

[diff "bin"]
    textconv = hexdump -v -C

[difftool]
    prompt = false

[difftool "meld"]
    trustExitCode = true
    cmd = open -W -a Meld --args \"$LOCAL\" \"$PWD/$REMOTE\"

[merge]
    tool = meld

[mergetool]
    keepBackup = false
    trustExitCode = true
    cmd = open -W -a Meld --args --auto-merge \"$PWD/$LOCAL\" \"$PWD/$BASE\" \"$PWD/$REMOTE\" --output=\"$PWD/$MERGED\"

[gc]
    auto = 256
