[include]
	path = ~/.gitconfig.local

[alias]
	l = log --pretty=oneline -n 20 --graph --abbrev-commit
	s = status -s
	c = clone --recursive
	dm = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"

[core]
	editor = vim
	excludesfile = ~/.gitignore.global

[credential]
	helper = cache

[advice]
	statusHints = false

[color]
	diff = auto
	status = auto
	branch = auto
	ui = true

[color "status"]
	header = white normal dim
	added = green
	changed = yellow
	untracked = red normal blink

[color "branch"]
	current = green
	local = cyan
	remote = magenta

[diff]
	renames = copies
	external = git-meld

[diff "bin"]
	textconv = hexdump -v -C

[grep]
  extendRegexp = true
  lineNumber = true

[log]
	date = local

[push]
	default = simple

[mergetool]
	keepBackup = false

[merge]
	tool = meld

[difftool]
	prompt = false
