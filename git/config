# vi: ft=gitconfig
[init]
  defaultBranch = main

[include]
  path = user.conf

[alias]
  l = "log --pretty=format:'%<|(4)%Cgreen %h %C(brightblack)│%Cblue%<(8,trunc) %an %Creset%C(brightblack) %G? │%C(reset) %s' --graph --no-merges -15"
  s = status -s
  c = clone --recursive
  dm = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"

[core]
  editor = ~/.dotfiles/git/giteditor
  excludesfile = ~/.dotfiles/git/gitignore
  fscache = true
  preloadindex = true

[commit]
  gpgsign = true

[gc]
  auto = 256

[rerere]
  enabled = true

[credential]
  helper = cache

[advice]
  statusHints = false

[color]
  diff = auto
  status = auto
  branch = auto
  ui = true

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  header = white normal dim
  added = green
  changed = yellow
  deleted   = red bold
  untracked = red normal

[color "branch"]
  current = green
  local = cyan
  remote = magenta

[push]
  default = simple

[rebase]
  autostash = true

[pull]
  rebase = true

[grep]
  extendRegexp = true
  lineNumber = true

[log]
  date = local

