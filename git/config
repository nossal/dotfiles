# vi: ft=gitconfig
[init]
  defaultBranch = main

[include]
  path = user.conf

[alias]
  l = "log --pretty=format:'%<|(4)%Cgreen %h %C(brightblack)│%Cblue%<(8,trunc) %an %Creset%C(brightblack) %G? │%C(reset) %s' --graph --no-merges -15"
  s = status -s
  c = clone --recursive
  dm = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"
  df = diff --output-indicator-new=' ' --output-indicator-old=' '

[core]
  editor = ~/.dotfiles/git/giteditor
  excludesfile = ~/.dotfiles/git/gitignore
  hooksPath = ~/.dotfiles/git/hooks
  fscache = true
  preloadindex = true
  compression = 9
  whitespace = error
  autocrlf = input

[url "git@github.com"]
  unsteadOf = "gh:"

[diff]
  context = 3
  renames = copies
  interHunkContext = 10

[commit]
  gpgsign = true

[interactive]
  #difffilter = pager --patch
  singlekey = true

[gc]
  auto = 256

[rerere]
  enabled = true

[credential]
  helper = cache

[advice]
  addEmptyPathspec = false
  pushNonFastFoward = false
  statusHints = false

[status]
  branch = true
  showStash = true
  showUntrackedFiles = all

[push]
  autoSetupRemote = true
  default = current
  followTafs = true

[pull]
  default = current
  rebase = true

[rebase]
  autostash = true
  missingConnitsCheck = warn

[grep]
  extendRegexp = true
  lineNumber = true

[log]
  abbrevCommit = true
  date = local
  graphColors = brightblue,yellow,cyan,magenta,green,red
	graphChars = "│ ─┐ ─┘"

[color]
  diff = auto
  status = auto
  branch = auto
  ui = true

[color "diff"]
  meta = black bold
  frag = magenta
  context = white
  whitespace = yellow reverse
  old = red

  ; meta = yellow bold
  ; frag = magenta bold
  ; old = red bold
  ; new = green bold

[color "status"]
  header = white normal dim
  added = green
  changed = yellow
  deleted   = red bold
  untracked = red normal

[color "branch"]
  current = green
  local = cyan
  remote = magenta

