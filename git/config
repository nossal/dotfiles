#/* vim: set filetype=gitconfig : *
; [include]
;   path user.conf

[alias]
  l = "log --pretty=format:'%<|(4)%Cgreen %h%Cblue%<(12,trunc) %an %Creset- %s' --graph --no-merges -15"
  s = status -s
  c = clone --recursive
  dm = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"

[core]
  editor = nvim
  pager = delta
  excludesfile = ~/.dotfiles/git/gitignore
  fscache = true
  preloadindex = true

[gc]
  auto = 256

[rerere]
  enabled = true

[page]
	diff = delta
	show = delta
	log = delta
	blame = delta
	reflog = delta

[credential]
  helper = cache

[advice]
  statusHints = false

[color]
  diff = auto
  status = auto
  branch = auto
  ui = true

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  header = white normal dim
  added = green
  changed = yellow
  deleted   = red bold
  untracked = red normal

[color "branch"]
  current = green
  local = cyan
  remote = magenta

[push]
  default = simple

[pull]
  rebase = true

[grep]
  extendRegexp = true
  lineNumber = true

[log]
  date = local

[interactive]
	diffFilter = delta --color-only

[delta]
  features = decorations

[delta "interactive"]
  keep-plus-minus-markers = false

[delta "decorations"]
  commit-decoration-style = blue ol
  commit-style = raw
  file-style = omit
  hunk-header-decoration-style = blue box
  hunk-header-file-style = red
  hunk-header-line-number-style = "#067a00"
  hunk-header-style = file line-number syntax

