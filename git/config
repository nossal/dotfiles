# vi: ft=gitconfig
[init]
  defaultBranch = main

[include]
  path = user.conf

[includeIf "gitdir:~/workspace/WORK/"]
  path = ~/.dotfiles-work/git/config

[alias]
  l = "log --pretty=format:'%<|(4)%Cgreen %h %C(brightblack)│%Cblue%<(8,trunc) %an %Creset%C(brightblack) %G? │%C(reset) %s' --graph --no-merges -15"
  s = status -s
  c = clone --recursive
  pf = push --force-with-lease
  dm = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"
  df = diff --output-indicator-new=' ' --output-indicator-old=' '

[core]
  editor = ~/.dotfiles/git/giteditor
  excludesfile = ~/.dotfiles/git/gitignore
  hooksPath = ~/.dotfiles/git/hooks
  fscache = true
  preloadindex = true
  compression = 9
  whitespace = error
  autocrlf = input
  pager = delta

[url "git@github.com"]
  unsteadOf = "gh:"

[diff]
  context = 3
  interHunkContext = 6
  renames = true
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true

[merge]
  conflictStyle = diff3

[delta]
  true-color = always
  navigate = true
  line-numbers = true
  hunk-header-decoration-style = none

[commit]
  template = ~/.dotfiles/git/template
  gpgsign = true

[interactive]
  singlekey = true
  diffFilter = delta --color-only

[gc]
  auto = 256

[rerere]
  enabled = true

[credential]
  helper = cache

[advice]
  addEmptyPathspec = false
  pushNonFastFoward = false
  statusHints = false

[status]
  branch = true
  showStash = true
  showUntrackedFiles = all

[push]
  autoSetupRemote = true
  default = current
  followTags = true

[pull]
  default = current
  rebase = true

[rebase]
  autoStash = true
  autoSquash = true
  updateRefs = true
  missingConnitsCheck = warn

[grep]
  extendRegexp = true
  lineNumber = true

[log]
  abbrevCommit = true
  date = local
  graphColors = brightblue,yellow,cyan,magenta,green,red

[column]
  ui = auto

[tag]
  sort = version:refname

[help]
  autocorrect = 10

[color]
  diff = auto
  status = auto
  branch = auto
  ui = true

[color "diff"]
  meta = black bold
  frag = magenta
  context = white
  whitespace = yellow reverse
  old = red
  ; meta = yellow bold
  ; frag = magenta bold
  ; old = red bold
  ; new = green bold

[color "status"]
  header = white normal dim
  added = green
  changed = yellow
  deleted   = red bold
  untracked = red normal

[color "branch"]
  current = green
  local = cyan
  remote = magenta
