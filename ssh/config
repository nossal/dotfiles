# vi: ft=sshconfig
match exec "[[ $WORK_SSH_CONFIG ]]"
  Include ${WORK_SSH_CONFIG}  # ~/.dotfiles-work/ssh-config

Host *
  SendEnv LANG LC_*
  MACs hmac-md5,hmac-sha1
  ForwardX11 no
  ForwardAgent yes
  ServerAliveInterval 60
  ControlPath ~/.ssh/control/%C
  ControlMaster auto
  ControlPersist 10m
  Compression yes

# GitHub, GitLab,
Host *github.com *.gitlab.com
  User nossal
  IdentityFile ~/.ssh/nossal

Host 3d-printer
  HostName 3dprinter.local
  User pi
  IdentityFile ~/.ssh/mainsail

Host 192.168.* node-* *.local
  User nossal
  IdentityFile ~/.ssh/nossal
