# vim: ft=sh

alias ls="lsd"
alias ll="ls -l"
alias la="ll -a"
alias lt="ls --tree"
alias lll="ll --size bytes"

alias xclip="xclip -selection clipboard"
alias v="fd --type f --hidden --exclude 'node_modules .m2 .git' | fzf-tmux -p --reverse | xargs nvim"
alias nv="nvim"

alias psh="powershell.exe"
